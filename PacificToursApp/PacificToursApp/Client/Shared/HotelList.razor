@inject HttpClient Http

<ul class="list-unstyled">
    @foreach (var hotel in Hotels)
    {
        <li class="media my-3">
            <div class="media-img-wrapper mr-2">
                <a href="#">
                    <img class="media-img" src="@hotel.HotelImageUrl" alt="@hotel.HotelName" />
                </a>
            </div>
            <div class="media-body">
                <a href="#">
                    <h4 class="mt-0">@hotel.HotelName</h4>
                </a>
                <p>@hotel.HotelDescription</p>
                <p> <strong>Single Suite:</strong> £@hotel.SingleSuite.SuitePrice <strong>Spaces Available:</strong> @hotel.SingleSuite.SuiteAvailableSpaces </p>
                <p> <strong>Double Suite:</strong> £@hotel.DoubleSuite.SuitePrice <strong>Spaces Available:</strong> @hotel.DoubleSuite.SuiteAvailableSpaces </p>
                <p> <strong>Family Suite:</strong> £@hotel.FamilySuite.SuitePrice <strong>Spaces Available:</strong> @hotel.FamilySuite.SuiteAvailableSpaces </p>
            </div>
        </li>
    }
</ul>

@code {
    private static List<Hotel> Hotels = new List<Hotel>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<Hotel>>("api/Hotel");
        if (result != null)
        {
            Hotels = result;
        }
    }
}
